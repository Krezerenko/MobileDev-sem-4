<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="@string/text_main"/>

    <Button
            android:id="@+id/button_main_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textSize="30sp"
            android:text="@string/button_main_next"/>

    <EditText
            android:id="@+id/edit_main_firstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="center"
            android:textSize="30sp"
            android:hint="@string/edit_main_firstName" />

    <EditText
            android:id="@+id/edit_main_secondName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="center"
            android:textSize="30sp"
            android:hint="@string/edit_main_secondName" />

    <EditText
            android:id="@+id/edit_main_thirdName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="text"
            android:textSize="30sp"
            android:hint="@string/edit_main_thirdName" />

</LinearLayout>