<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <EditText
            android:id="@+id/edit_main_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Имя пользователя" />
    <Button
            android:id="@+id/button_main_setUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Установить имя пользователя"/>
    <Button
            android:id="@+id/button_main_deleteUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить имя пользователя"/>
    <Button
            android:id="@+id/button_main_getUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Получить имя пользователя"/>
    <TextView
            android:id="@+id/text_main_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="Имя пользователя"/>


</LinearLayout>